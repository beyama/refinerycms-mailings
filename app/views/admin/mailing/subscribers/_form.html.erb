<%= form_for [:admin, @subscriber] do |f| -%>
  <%= render :partial => "/shared/admin/error_messages", :locals => {
          :object => @subscriber,
          :include_object_name => true
        } %>
  
  <div class='field'>
    <%= f.label :email -%>
    <%= f.text_field :email, :class => 'larger widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :token -%>
    <%= f.text_field :token -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions",
              :locals => {
                :f => f,
                :continue_editing => false,
                :delete_title => t('delete', :scope => 'admin.subscribers.subscriber'),
                :delete_confirmation => t('message', :scope => 'shared.admin.delete', :title => @subscriber.email)
              } %>
<% end -%>
