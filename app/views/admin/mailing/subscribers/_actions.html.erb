<ul>
  <% if Admin::Mailing::SubscribersController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_subscribers_url
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_subscriber_url,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::Mailing::SubscribersController.sortable? and Subscriber.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Subscribers"),
                 admin_subscribers_url,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Subscribers"),
                 admin_subscribers_url,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>